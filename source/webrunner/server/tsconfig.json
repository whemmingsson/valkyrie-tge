{
  "compilerOptions": {
    "target": "ES2022",
    "moduleResolution": "node",
    "module": "ES2022",
    "esModuleInterop": true,
    "outDir": "dist",
    "strict": false,
    "skipLibCheck": true
  },
  "ts-node": {
    "esm": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/jest.config.ts",
  ]
}